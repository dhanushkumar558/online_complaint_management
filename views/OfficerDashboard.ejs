<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FixIt | Online-Complaint-Registration-and-Management-system</title>
    <!-- icon -->
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon" />
    <!-- bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
  </head>
  <body class="p-4">
    <div class="logout-btn d-flex justify-content-end"><button type="button" class="btn btn-dark logout_btn">Logout</button></div>
    <div class="comaplaints d-flex justify-content-center">
      <div class="complaint">
        <% complaints.forEach(e => { %>
        <form action="/officer-update-complaint" method="post" enctype="multipart/form-data">
          <span style="letter-spacing: 1px; font-size: 12px; color: gray"><%= e.date %></span>
          <div class="card complaint mb-3" style="min-width: 18rem">
            <div class="card-header"><span style="font-weight: 700"><%= e.title %> </span> <a href="<%= e.imageURL %>" style="text-decoration: none; padding-left: 15px"> ðŸ‘€</a></div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <span style="font-weight: 500">Address :</span> <%= e.address %> <a href="<%= e.gMapURL %>"><i class="bi bi-geo-alt"></i></a>
              </li>
              <li class="list-group-item"><span style="font-weight: 500">work status </span> <%= e.workStatus %></li>

              <li class="list-group-item">
                <div class="workStatus d-flex justify-content-between">
                  <div>
                    <p style="font-weight: 500">Set Work Status :</p>
                  </div>
                  <div>
                    <select name="workStatus" required>
                      <option>~</option>
                      <option value="-">Unset</option>
                      <option value="Started">Work Started</option>
                      <option value="Finished">Work Finished</option>
                    </select>
                  </div>
                </div>
              </li>
              <li class="list-group-item">
                <div class="mb-3"><label class="input-group-text" for="photo">Upload Work Status Image</label><input type="file" class="form-control" id="photo" name="workStatusImage" required /></div>
                <div class="d-flex justify-content-end"><button type="submit" class="btn btn-outline-success btn-sm">Commite change</button></div>
                <input type="hidden" name="complaintId" value="<%= e.id %>" />
                <input type="hidden" name="officerName" value="<%= e.officerAppointed %>" />
              </li>
            </ul>
          </div>
        </form>
        <% }) %>
      </div>
    </div>
    <script>
      let logout_btn = document.querySelector(".logout_btn");
      logout_btn.addEventListener("click", () => {
        window.location.replace("/sub-pages/login.html");
      });
    </script>
  </body>
</html>
